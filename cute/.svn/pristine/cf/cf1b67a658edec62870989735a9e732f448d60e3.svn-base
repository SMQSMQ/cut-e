    <style type="text/css">



.confot {
    padding-top: 5px;
    height: 25px;
    padding-bottom: 3px;
}
.confot img{height:25px; display:inline-block; border: none;}

.abum .wp-fllist:last-of-type{ border: none;}

    .swiper-container {
        width:412px;
        height:auto;
        background: #f5f5f5;
    }
    .swiper-slide {
        text-align: center;
        font-size: 18px;
        background: #fff;

        /* Center slide text vertically */
        display: -webkit-box;
        display: -ms-flexbox;
        display: -webkit-flex;
        display: flex;
        -webkit-box-pack: center;
        -ms-flex-pack: center;
        -webkit-justify-content: center;
        justify-content: center;
        -webkit-box-align: center;
        -ms-flex-align: center;
        -webkit-align-items: center;
        align-items: center;
    }

    .share-shade{
      position: fixed;
      margin: auto;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      background: rgba(0,0,0,.6);
      z-index: 15;
      display: none;
    }

    .share-inner{
      width: 95%;
      position: fixed;
      margin: auto;
      top: 100%;
      opacity: 0;
      left: 0;
      right: 0;
      text-align: center;
      background: #fff;
      transition: top ease .3s,opacity ease .3s .1s;
      z-index: 15;
    }
    .share-inner.up{
      top: 10%;
      opacity: 1;
    }
    .share-inner h2{
      border-bottom: 1px solid #ccc;
      padding: 15px;
    }
    .share-inner ul{
      padding: 30px 20px 10px 20px;
    }

    .share-inner ul li{
      width: 100%;
      margin-bottom: 20px;
      line-height: 45px;
    }
    .share-inner ul li::after{
      content: '';
      display: block;
      clear: both;
    }
    .share-inner ul li .share-img{
      float: left;
      width: 45px;
      height: 45px;
      margin: 0 auto;
    }
    .share-inner ul li .share-img img{
      width: 100%;
    }
    .share-inner ul li p{
      float: left;
      margin-left: 15px;
      font-size: 18px;
    }
    .share-inner .cancel-btn{
      padding: 15px;
      font-size: 17px;
      border-top: 1px solid #ccc;
      color: #0a9950;
    }

    </style>
