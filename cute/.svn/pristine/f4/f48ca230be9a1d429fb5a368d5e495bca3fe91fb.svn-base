          <script type="text/javascript">
              (function(){
                  var leftBtn = $('.left-fixed .left a'),
                      nav = $('#nav');

                  nav.navigator().on('select', function(){
                      leftBtn.removeClass('ui-state-active');
                  });

                  leftBtn.click(function(){
                      nav.navigator('unselect');
                      $(this).addClass('ui-state-active');
                  });
              })();


              $('#nav ul li').click(function(){

                  var wpIndex =$(this).index();
                  // $('.tabs-atc').eq(wpIndex).find('.wrap').empty()
                  var dataID = $(this).attr('data_id');
                  console.log(wpIndex)
                  $('#tabs-con article').removeClass('select');
                  $('#tabs-con article').eq(wpIndex).addClass('select');
                  if($(this).hasClass('load')){
                    dropLoads('__APP__/index.php?s=Index/greeting_card_data/tab_id/'+dataID+'/p/',wpIndex);
                    $(this).removeClass('load');
                  }
              });

              function dropLoads(url,index){
                var page = 2;
                var url = url;
                $('.tabs-atc').eq(index).dropload({
                  scrollArea : window,
                  loadDownFn : function(me){
                    $.ajax({
                      type: 'get',
                      url : url+page,
                      success: function(data){
                        var data = JSON.parse(data);
                        console.log(data,page)
                        if(data==null){
                          $('.dropload-down').hide(500)
                          me.lock()
                        }
                        $.each(data,function(i,v){
                          me.lock();
                          setTimeout(function(){
                              $('.tabs-atc').eq(index).find('.wrap').append('<div class="hm-cn-list"><div><img src="'+v.cover+'" class="hm-cn-listi"></div><div class="hm-cn-listx"><p>'+v.title+'</p><p>点击数'+v.pv+'次</p></div></div>');
                              page++;
                              me.resetload();
                          },1000)

                        })
                       // 每次数据加载完，必须重置
                       },
                         error: function(){
                         alert('Ajax error!');
                         // 即使加载出错，也得重置
                         me.resetload();
                       }
                    })
                  }
                })
              }

myInterfaceName.wancheng(2);
         </script>
