/**
 * 是否登录
 */
function is_login()
{
	if(isset($_COOKIE[md5('cute')])){
		$a = unserialize($_COOKIE[md5('cute')]);
		if($a['user_id']<=0 || $a['user_id']=='') redirect('index.php?s=Login');
	}else                                       redirect('index.php?s=Login');
}
