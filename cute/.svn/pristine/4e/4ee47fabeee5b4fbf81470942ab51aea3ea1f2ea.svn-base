	      <form  action="" method="post" id="password3">
			      <div class="regbg">
			      	 <p><input  placeholder="请输入新密码" type="text" maxlength="32" name="username" class="blur regbg-input" id="password1"></p>
			      	 <p>
			      	 	<input  placeholder="重复新密码" type="text"  maxlength="32" name="code" class="blur regbg-input" id="password2">
			      	 </p>
			      </div>
			      <div class="reg-btnbox">
			      	 <a href="#" class="reg-btn1" id="submit">下一步</a>
			      </div>
	     </form>		      
           
	      <script src="__APP__/public/js/common.js"></script>
	      <script type="text/javascript">
               


	          $(function(){
                   $('.blur').focus(function(){
                      $(this).addClass('reg_select')
                   })
                   $('.blur').blur(function(){
                      $(this).removeClass('reg_select')
                   })

                   $('#password1 ,#password2').onlyNumAlpha();//只能输入数字和英文
                   $('#submit').click(function(){
                   	   var pas1 = $('#password1').val();
                   	   var pas2 = $('#password2').val();
                   	   var null2=$('.blur').val();   
                   	   if(null2 == ''){
                   	   	  tip('请输入新密码')
                   	   }                	   
                   	   if(pas1 != pas2){
                             tip('两次密码不一致！请重新输入')
                   	   }
                   	   $.ajax({
			                cache: true,
			                type: "POST",
			                url:ajaxCallUrl,
			                data:$('#password3').serialize(),// 你的formid
			                async: false,
			                error: function(request) {
			                    tip('发生错误了！')
			                },
			                success: function(data) {
			                    tip('密码修改成功！')
			                }
			         });
                   	   return true
                   })
	          })

	      </script>
